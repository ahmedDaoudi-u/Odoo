<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="estate_property_tree_view" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type_id"></field>
                    <field name="tag_ids"></field>
                    <field name="postcode"></field>
                    <field name="data_availability"></field>
                    <field name="expected_price"></field>
                    <field name="best_offer"></field>
                    <field name="selling_price"></field>
                </tree>

            </field>
        </record>

        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="accepted" type="object" string="Accept"/>
                        <button name="refused" type="object" string="Refuse"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="tag_ids" widget="many2many_tags"></field>
                            <group>
                                <field name="type_id"></field>
                                    <field name="state"></field>
                                <field name="postcode"></field>
                                <field name="data_availability"></field>
                            </group>

                            <group>
                                <field name="expected_price"></field>
                                <field name="best_offer"></field>
                                <field name="selling_price"></field>

                            </group>

                        </group>
                        <notebook>
                            <page name="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden_area"/>
                                    <field name="Garden_orientation"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page name="Offers">
                                    <field name="offer_ids">
                                        <tree editable="bottom">
                                            <field name ="price"/>
                                            <field name ="partner_id"/>
                                            <field name="creation_date"/>
                                            <field name="validity"/>
                                            <field name="deadline"/>
                                            <field name="status" nolabel="1"/>
                                        </tree>
                                    </field>
                            </page>
                            <page name="Other Info">
                                <group>
                                    <field name="sales_id"/>
                                    <field name="buyer_id"/>
                                    <field name="phone"/>
                                </group>

                            </page>

                        </notebook>
                    </sheet>

                </form>

            </field>

        </record>

        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="estate_property_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_content_smiling_face">
                    Create a property to advertise.
                </p>
            </field>
        </record>
    </data>
</odoo>

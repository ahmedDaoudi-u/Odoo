<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="action_property_view_offers" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('property_id', '=' , active_id)]</field>
        </record>

        <record id="action_property_kanban_view" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="name"/>
                    <field name="state"></field>
                    <field name="postcode"></field>
                    <template>
                        <t t-name="kanban-box">
                            <div class="oe-kanban-details">
                                <field name="name"/>
                            </div>
                        </t>
                    </template>
                </kanban>
            </field>
        </record>


        <record id="estate_property_tree_view" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type_id"></field>
                    <field name="tag_ids"></field>
                    <field name="postcode"></field>
                    <field name="data_availability"></field>
                    <field name="expected_price"></field>
                    <field name="best_offer"></field>
                    <field name="selling_price"></field>
                </tree>
            </field>
        </record>
        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_sold" type="object" string="Sold" class="btn btn-primary"/>
                        <button name="action_cancel" type="object" string="Cancel" class="btn btn-danger"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action" name="%(real_estate_ads.action_property_view_offers)d">
                                <field name="offer_count" string="Offers" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <field name="name" placeholder="Property Name"/>
                            <field name="tag_ids" widget="many2many_tags"></field>
                            <group>
                                <field name="type_id"></field>
                                    <field name="state"></field>
                                <field name="postcode"></field>
                                <field name="data_availability"></field>
                            </group>
                            <group>
                                <field name="expected_price"></field>
                                <field name="best_offer"></field>
                                <field name="selling_price"></field>
                            </group>
                        </group>
                        <notebook>
                            <page name="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden_area"/>
                                    <field name="Garden_orientation"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page name="Offers">
                                    <field name="offer_ids">
                                        <tree editable="bottom" decoration-success="status == 'accepted'" decoration-danger="status == 'refused'">
                                            <field name ="price"/>
                                            <field name ="partner_id"/>
                                            <field name="creation_date"/>
                                            <field name="validity"/>
                                            <field name="deadline"/>
                                            <field name="status" readonly="1"/>
                                            <button name="action_accepted_offer" type="object" icon="fa-check" string="Accept"/>
                                            <button name="action_refused_offer" type="object" icon="fa-times" string="Decline"/>
                                        </tree>
                                    </field>
                            </page>
                            <page name="Other Info">
                                <group>
                                    <field name="sales_id"/>
                                    <field name="buyer_id"/>
                                    <field name="phone"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="estate_property_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_content_smiling_face">
                    Create a property to advertise.
                </p>
            </field>
        </record>

         <record id="custom_client_action" model="ir.actions.client">
            <field name="name">Custom Client</field>
            <field name="tag">custom_client_action</field>
        </record>
    </data>
</odoo>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="estate_property_type_tree_view" model="ir.ui.view">
            <field name="name">estate.property_type.tree</field>
            <field name="model">estate.property_type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>

            </field>
        </record>

        <record id="estate_property_type_form_view" model="ir.ui.view">
            <field name="name">estate.property_type.from</field>
            <field name="model">estate.property_type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>

                </form>

            </field>

        </record>

        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="res_model">estate.property_type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="estate_property_type_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_content_smiling_face">
                    Create a property to advertise.
                </p>
            </field>
        </record>
    </data>
</odoo>
